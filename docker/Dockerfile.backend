FROM node:18-alpine

WORKDIR /usr/src/app

COPY package.json .
COPY pnpm-lock.yaml .
COPY turbo.json .

COPY packages ./packages
COPY apps ./apps

RUN npm install -g pnpm && pnpm install --frozen-lockfile

RUN npx prisma generate --schema=./packages/db/prisma/schema.prisma

EXPOSE 3002

CMD ["node", "apps/backend/dist/index.js"]
